<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>PUC Que Pariu</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <%= yield(:head) %>
</head>
<body class="controller-<%= controller_name %> action-<%= action_name %>">

<div id="fb-root"></div>

<div class="wrapper" id="wrapper">

  <!-- navbar -->
  <nav class="navbar navbar-fixed-top navbar-default" role="navigation" id="navbar">
    <div class="container">

      <div class="navbar-header">
        <a href="/" class="navbar-brand" title="PUC Que Pariu!">
          <img src="https://s3-sa-east-1.amazonaws.com/pucquepariu/assets/logo.png" alt="PUC Que Pariu!" class="logo" title="PUC Que Pariu!"/>
        </a>
      </div>

      <ul class="nav navbar-nav">
        <li class="<%= active_page(controller: :static, action: :index) %>"><a href="/">Home</a></li>
        <li class="<%= active_page(controller: :courses) %>"><a href="/disciplinas">Disciplinas</a></li>
        <% if can? :manage, User %><li class="<%= active_page(controller: :users) %>"><a href="/users">Usu√°rios</a></li> <% end %>
        <% if can? :manage, StudyMaterial %><li class="<%= active_page(controller: :study_materials) %>"><a href="/study_materials">Material de Estudo</a></li> <% end %>
      </ul>

      <ul class="nav navbar-nav navbar-right">
        <% if current_user %>
          <li><strong class="navbar-text"><%= current_user.name %></strong></li>
          <li><%= link_to "Logout", signout_path, id: "sign_out" %></li>
          <% if current_user.is_admin? %>
            <li class="navbar-text">Admin</li>
          <% end %>
        <% else %>
          <li><a href="/auth/facebook" id="sing_in">Login com Facebook <i class="fa fa-facebook-square"></i></a></li>
        <% end %>
      </ul>

    </div>
  </nav>
  <!--/navbar -->

  <!-- container -->
  <div class="container" id="content">
    <div class="content">
      <div class="row">
        <div class="col-md-12">
          <%= render 'layouts/messages' %>
          <%= yield %>
        </div>
      </div>
      <footer>
      </footer>
    </div>
    <div class="push"></div>
  </div>
  <!--/container -->

  <!-- footer
  <div class="footer" id="footer">
    <div class="container">
      <div class="row">
        <div class="span3">oi</div>
        <div class="span9">cara</div>
      </div>
    </div>
  </div>
  <!--/footer -->

</div>

</body>
</html>
