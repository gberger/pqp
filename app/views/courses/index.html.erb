<h1>Listing Courses</h1>

  <% @courses.each do |course| %>
    <div class="row">
      <div class="col-md-12 well">
        <h2>
          <%= course.abbreviation %> - <%= course.name %>
        </h2>
        <ul>
          <li><%= link_to 'Show', course %></li>
          <% if can? :edit, course then %> <li><%= link_to 'Edit', edit_course_path(course) %></li> <% end %>
          <% if can? :delete, course then %> <li><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></li> <% end %>
        </ul>
      </div>
    </div>
    </tr>
  <% end %>

<br>

<% if can? :create, Course %>
  <%= link_to i_add, new_course_path, class: 'btn btn-primary' %>
<% end %>
