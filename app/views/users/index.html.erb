<h1>Users</h1>

<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Nickname</th>
      <th>Email</th>
      <th>Is Admin?</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr class="<%= user.is_admin? ? 'success' : '' %>">
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><a href="//facebook.com/<%= user.nickname %>"><%= user.nickname %></a></td>
        <td><%= user.email %></td>
        <td><%= user.is_admin? ? fa('check') : glyph('remove') %></td>
        <td><%= link_to "Toggle admin", toggle_admin_path(user), method: :put %></td>
      </tr>
    <% end %>
  </tbody>
</table>